@model IEnumerable<SettingsViewModel> 
@inject ICloudinaryService _cloudinaryService
@{
    ViewData["Title"] = "Parametrlər";
}
@{ var dnone = "display:block";}
@if(Model.Count() != 0)
{
    dnone = "display:none";
}
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Parametrlər</h1>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3" style=@dnone>
                <a asp-action="create" class="m-0 font-weight-bold btn btn-success">Yeni Parametr</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Vəziyyəti</th>
                                <th>Loqo</th>
                                <th>Sorğu nömrəsi</th>
                                <th>Adres</th>
                                <th>Telefon nömrəsi</th>
                                <th>E-Poçt</th>
                                <th>İş saatları</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Vəziyyəti</th>
                                <th>Loqo</th>
                                <th>Sorğu nömrəsi</th>
                                <th>Adres</th>
                                <th>Telefon nömrəsi</th>
                                <th>E-Poçt</th>
                                <th>İş saatları</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {


                            <tr>

                                <td>
                                    @if (item.Status)
                                    {
                                        <span class="badge badge-success">Aktive</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Deaktiv</span>
                                    }
                                </td>
                                <td>
                                    <img src="@_cloudinaryService.BuildUrl(item.Logo)" width="150" />
                                </td>
                                <td>@item.QueryNumber</td>
                                <td>@item.Adress</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td>@item.WorkTime</td>
                                <td>
                                    <a class="btn btn-info btn-circle btn-sm" asp-action="edit" asp-route-id="@item.Id">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-danger btn-circle btn-sm deleteitem" asp-action="delete" asp-route-id="@item.Id">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

