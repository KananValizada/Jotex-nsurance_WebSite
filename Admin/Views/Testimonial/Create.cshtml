@model TestimonialVieModel
@{
    ViewData["Title"] = "Create";
}
<!-- Begin Page Content -->
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Yeni Praktiki Yazi</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Vəziyyəti</label>
                    <div class="custom-control custom-radio custom-control-inline ml-3">
                        <input type="checkbox" asp-for="Status" class="custom-control-input">
                        <label class="custom-control-label" asp-for="Status">Aktiv</label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="AboutUsId">Blog</label>
                    <select asp-for="AboutUsId">
                        <option selected disabled>Seçin</option>
                        @foreach (var item in ViewBag.AboutUs)
                        {
                            <option value="@item.Id">@item.Id</option>
                        }
                    </select>
                    <span class="field-validation-valid" asp-validation-for="AboutUsId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServiceId">Blog</label>
                    <select asp-for="ServiceId">
                        <option selected disabled>Seçin</option>
                        @foreach (var item in ViewBag.Service)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span class="field-validation-valid" asp-validation-for="ServiceId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Review">Yazı</label>
                    <textarea class="form-control form-control-user slug-source" asp-for="Review"></textarea>
                    <span class="field-validation-valid text-danger" asp-validation-for="Review"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName">Yazar</label>
                    <input class="form-control form-control-user slug-source" asp-for="UserName">
                    <span class="field-validation-valid text-danger" asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserProfession">Yazar Peşəsi</label>
                    <input class="form-control form-control-user slug-source" asp-for="UserProfession">
                    <span class="field-validation-valid text-danger" asp-validation-for="UserProfession"></span>
                </div>
                <div class="form-group d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-pencil-alt"></i>
                        </span>
                        <span class="text">Yarat</span>
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
