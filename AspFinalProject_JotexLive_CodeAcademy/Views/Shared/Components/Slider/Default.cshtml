@model IEnumerable<SliderItemViewModel>

<!-- start of hero -->

    <div class="swiper-wrapper">
        @foreach (var item in Model)
        {
            <div class="swiper-slide">
                <div class="slide-inner slide-bg-image" data-background="images/slider/@item.Image">
                    <div class="container">
                        <div data-swiper-parallax="300" class="slide-title">
                            <h2>@Html.Raw(item.Title)</h2>
                        </div>
                        <div data-swiper-parallax="400" class="slide-text">
                            <p>@item.Slogan</p>
                        </div>
                        <div class="clearfix"></div>
                        <div data-swiper-parallax="500" class="slide-btns">
                            <a asp-controller="aboutus" asp-action="index" class="theme-btn">@item.ActionText</a>
                        </div>
                    </div>
                </div> <!-- end slide-inner -->
            </div> <!-- end swiper-slide -->
        }
    </div>
        <!-- end swiper-wrapper -->
