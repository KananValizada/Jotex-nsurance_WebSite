@model IEnumerable<AwardViewModel>
    <section class="award-section">
        <div class="container">
            <div class="row">
                <div class="col col-xs-12">
                    <div class="content-area">
                        <div class="row">
                            <div class="col col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
                                <div class="section-title-s2">
                                    <span>Mükafatlar</span>
                                    <h2>Bizim mükafatlarla tanış olun</h2>
                                </div>
                            </div>
                        </div>

                        <div class="award-slider">
                            @foreach (var item in Model)
                            {
                                <div class="grid">
                                    <div class="img-holder">
                                        <img src="images/awards/@item.Image" alt="">
                                    </div>
                                    <h3>@item.Year</h3>
                                    <p>@item.Name</p>
                                </div>
                            }

                           
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- end container -->
    </section>
